<section id="section-user">
    <form method="POST" action="<%=`/users/${user._id}/update?_method=PUT`%>" id="user-form" class="card">
      <h1>Edit</h1>
        <div class="row">
          <div class="col-sm-4">
      <label for="inputFirstName">Name</label>
      <input
        type="text"
        name="name"
        id="inputName"
        placeholder="Name"
        value="<%= user.name %>"
        required
        autofocus
      />
      </div>
      <div class="col-sm-4">
      <label for="inputEmail">Email</label>
      <input
        type="text"
        name="email"
        id="inputEmail"
        value="<%= user.email %>"
        placeholder="Email"
        required
      />
      </div>
      <div class="col-sm-4">
      <label for="inputPassword">Password</label>
      <input
        type="text"
        name="password"
        value="<%= user.password %>"
        id="inputPassword"
        placeholder="Password"
        required
      />
      </div>
      <div class="col-sm-4">
      <label for="inputRole">Role</label>
      <br/>
      <select name="role" id="role">
      <% if(user.role == "student"){ %>
        <option value="alumni">Alumni</option>
        <option value="student" selected="slected">Student</option>
      <% } else{ %>  
        <option value="alumni" selected="slected">Alumni</option>
        <option value="student">Student</option>
     <% } %>
    </select>
    </div>
    <div class="col-sm-4">
      <label for="inputGraduationYear">GraduationYear</label>
      <input
        type="number"
        value="<%= user.graduationYear %>"
        name="graduationYear"
        id="inputGraduationYear"
        required
        placeholder="Graduation Year"
      />
      </div>
      <div class="col-sm-4">
      <label for="inputMajor">Major</label>
      <input
        type="text"
        value="<%= user.major %>"
        name="major"
        id="inputMajor"
        required
        placeholder="Major"
      />
      </div>
      <div class="col-sm-4">
      <label for="inputJob">Job</label>
      <input
        type="text"
        value="<%= user.job %>"
        name="job"
        id="inputJob"
        placeholder="Job"
      />
      </div>
      <div class="col-sm-4">
      <label for="inputCompany">Company</label>
      <input
        type="text"
        value="<%= user.company %>"
        name="company"
        id="inputCompany"
        placeholder="Company"
      />
      </div>
      <div class="col-sm-4">
      <label for="inputCity">City</label>
      <input
        type="text"
        value="<%= user.city %>"
        name="city"
        id="inputCity"
        placeholder="City"
      />
      </div>
      <div class="col-sm-4">
      <label for="inputState">State</label>
      <input
        type="text"
        value="<%= user.state %>"
        name="state"
        id="inputState"
        placeholder="State"
      />
      </div>
      <div class="col-sm-4">
      <label for="country">Country</label>
      <input
        type="text"
        value="<%= user.country %>"
        name="country"
        id="inputCountry"
        placeholder="Country"
      />
      </div>
      <div class="col-sm-4">
      <label for="inputZipCode">Zip Code</label>
      <input
        type="text"
        value="<%= user.zipCode %>"
        name="zipCode"
        id="inputZipCode"
        placeholder="Zip Code"
      />
      </div>
      <label for="inputBio">Bio</label>
      <textarea
        name="bio"
        id="inputBio"
      >
      <%= user.bio %>
      </textarea>
      <label for="inputInterests">Interests</label>
      <textarea id="inputInterests" name="interests"><%= user.interests %></textarea>
    </div>
  </br>
      <div><input type="submit" value="Update"></input></div>
    </form>
</section>
  