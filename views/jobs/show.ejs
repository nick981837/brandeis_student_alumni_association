<section id="section-job">
    <div id="user-form" class="card">
        <h2><%= job.title %></h2> 
            <h5><%= job.company %>. <%= job.location %></h5>
            <h5>$<%= job.salary %></h5>
            <h5>Description: <%= job.description %></h5>
            <h5>Skills & Requirements: <%= job.requirements %></h5>
            <h5>Contact: <%= job.contactEmail %> | <%= job.contactPhone %></h5>
            <h5>Post Date: <%= job.postDate.toISOString().slice(0, 10) %></h5>
            <h5>Deadline Date: <%= job.deadlineDate.toISOString().slice(0, 10) %></h5>
            <% if(job.isActive){ %>
                <h5>Is Active: Yes</h5>
              <% } else{ %>  
                <h5>Is Active: No</h5>
             <% } %>
            <div class="btn-group justify-content-center" role="group">
                <a href="<%=`/jobs/${job._id}/edit` %>" class="button">Edit</a>
                <a href="<%=`/jobs/${job._id}/delete?_method=DELETE` %>" class="button" onclick="return confirm('Are you sure you want to delete this job?')">Delete</a>
            </div>
    </div>
</section>

